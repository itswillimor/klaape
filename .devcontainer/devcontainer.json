{
  "name": "Klaape Development",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "forwardPorts": [19000, 19001, 19002, 8000],
  "portsAttributes": {
    "19000": {
      "label": "Expo App",
      "onAutoForward": "notify"
    },
    "19001": {
      "label": "Expo Metro",
      "onAutoForward": "notify"
    },
    "19002": {
      "label": "Expo DevTools",
      "onAutoForward": "notify"
    },
    "8000": {
      "label": "Django Backend",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "cd frontend && npm install",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-python.python"
      ]
    }
  }
}